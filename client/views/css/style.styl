@font-face{
  font-family:"Old English Text MT";
  src:url("../fonts/OLDENGL.TTF");
}

fontOld = "Old English Text MT"

blueBG = #90caf9
blueLight = #64b5f6
blueMid = #2196f3
blueDark = #1976d2
*
  box-sizing: border-box

body
  font-size: 16px;
  width: 100%;
  padding: 0
  margin: 0
  box-sizing border-box
  vertical-align: top
  font-family Roboto
  font-weight: 400
  background: #82b1ff

p, h1, h2, h3, h4, h5, h6
  margin: 0

ul
  list-style none
  padding: 0;
  margin: 0;

a
  text-decoration: none

.container
  width 100%
  max-width: 1022px
  margin: 0 auto
  height: 100%

.header
  width: 100%
  height: 90px
  background: #3586FF
  color: #fff

.logo_head
  font-family: fontOld
  font-size: 60px
  padding: 10px 0 0 40px
  text-shadow: 3px 3px 5px rgba(0, 0, 0, 0.529411764705882);
  display: inline-block
  float: left

.login
  display: block
  text-align: right
  vertical-align: top
  padding: 10px 30px 0 0
  text-shadow 0 0 2px #424242

.login__name
  display: inline-block

.login__exit
  cursor: pointer

.login__exit:hover
  text-decoration: underline

.login__name:after
  content '|'
  margin: 0 10px

.label_head
  font-size: 24px
  text-align: right
  padding-right: 30px
  margin-top: 15px
  text-shadow 0 0 2px #424242

.start
  margin: 200px auto
  width: 400px
  border-radius 4px
  color: #fff
  padding-top: 12px
  text-align: center
  background: #fff
  box-shadow: 0 12px 15px 0 rgba(0,0,0,0.24),0 17px 50px 0 rgba(0,0,0,0.19);
  padding-bottom:5px

.start__button
  background: blueDark
  width: 90%
  height: 50px
  line-height: 45px
  font-size: 30px
  border 2px solid blueDark
  border-radius 4px
  margin: 10px auto
  color: #fff
  box-shadow: 0 6px 15px 0 rgba(0,0,0,0.2),0 4px 16px 0 rgba(0,0,0,0.25);
  transition: all 450ms cubic-bezier(0.23, 1, 0.32, 1) 0ms;
  transform: translate3d(0px, 0px, 0px);

.start__button:hover
  cursor: pointer
  color: blueDark
  background: #fff
  box-shadow: 0 8px 17px 0 rgba(0,0,0,0.3),0 6px 20px 0 rgba(0,0,0,0.35);

.start__button_big
  background: blueMid
  height: 120px
  font-size: 55px
  line-height: 115px
  width: 90%
  margin-bottom: 15px
  border 2px solid blueMid

.start__button_big:hover
  color: blueMid

.start__text
  font-size: 18px
  width:90%
  display: block
  margin: 5px auto 15px
  color: #fff
  background: blueLight
  border-radius 4px
  padding: 10px
  box-shadow: 0 2px 5px 0 rgba(0,0,0,0.2),0 2px 5px 0 rgba(0,0,0,0.19);